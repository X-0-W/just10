
<div class='g-glossy p-3'>
  <h3><strong>Find your local tresures for just $10!</strong></h3>
  </div>
  <div class="cards">
    <% @listings.all.each do |listing| %>
      <%= link_to listing_path(listing) do %>
          <div class="card">
            <% if listing.photo.attached? %>
              <%= image_tag listing.photo, crop: :fill, size:100 %>
            <% else %>
              <%= image_tag "bunny.jpg", crop: :fill, size:100 %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="container">
      <%= form_tag listings_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control mt-2",
          placeholder: "What are you looking for?"%>
        <div class="d-flex justify-content-center mt-2">
          <%= submit_tag "Try Now", class: "btn custom-btn" %>
        </div>
      <% end %>
    </div>
</div>
