<% i = 1 %>

<% 3.times do %>
  <div class="scroll-left">
    <div class="inner">
      <div class="scroll-cards">
        <% 10.times do |i| %>
          <div class="home-card">
            <%= image_tag "https://source.unsplash.com/random/80x80/?homeware=#{i}", crop: :fill, size: 80 %>
            <% i += 1 %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="scroll-right">
    <div class="inner">
      <div class="scroll-cards">
        <% 10.times do |i| %>
            <div class="home-card">
                <%= image_tag "https://source.unsplash.com/random/80x80/?object=#{i}", crop: :fill, size: 80 %>
                <% i += 1 %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
