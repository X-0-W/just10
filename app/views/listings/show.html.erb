
<div class="container">
  <div class="index-card" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= cl_image_path @listing.photo.key %>)">
    <div class="top-left-icon">
      <%# <i class="fas fa-heart"></i> --> wishlist %>
      <i class="far fa-heart"></i>
    </div>
    <div class="bottom-right-icon">
      <p> <%= params[:distance].to_f.round(1) %> km</p>
    </div>
  </div>


  <div class="">
    <h1> <%= @listing.title.capitalize %> </h1>
    <p style="text-align: left" > Listed <%= time_ago_in_words(@listing.created_at) %> ago</p>
  </div>

  <p> Collection: <%= @listing.collection_instruction %> </p>

  <div style="width: 100%; height: 228px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to 'Purchase', new_listing_order_path(@listing), class: "btn btn-primary" %>

    <div class="btn btn-primary">
      <%= link_to listing_path(@listing) do %>
        <i class="far fa-comment"> seller </i>
      <% end %>
    </div>
  </div>

</div>


<% unless @other_listings_from_same_user.empty? %>
  <div class="container">
    <p><strong>Other items from this seller:</strong></p>
  </div>
    <div class="seller-other-cards m-2">
      <% @other_listings_from_same_user.each do |listing| %>
        <%= link_to listing_path(listing) do %>
          <div class="seller-other-card" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url(<%= cl_image_path listing.photo.key %>)">
            <div class="top-left-icon">
              <%# <i class="fas fa-heart"></i> --> wishlist %>
              <i class="far fa-heart"></i>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
<% end %>
