<div data-controller="search" data-search-address-value="<%= params[:address] %>">
  <div class="listings-headers d-flex justify-content-between mt-2 mx-2">
    <select data-search-target="distance" data-action="change->search#fetchListings">
      <% 10.times do |i| %>
        <% if i < 9 %>
          <option value="<%= i + 1 %>"><%= i + 1 %></option>
        <% else %>
          <option value="<%= i + 1 %>" selected><%= i + 1 %></option>
        <% end %>
      <% end %>
  </select>
  </div>
  <%# <p>sort by: </p> %>
  <%# <p>items per row: </p> %>

  <%= render "results", listings: @listings %>
</div>
