<div class="container d-flex justify-content-center mt-3">
  <div class="col-10 justify-content-center">
    <h1 class="mt-3">Add an item on sale</h1>
    <%= simple_form_for @listing do |f| %>
      <%= f.input :title %>
      <%= f.input :address %>
      <%= f.input :photo, as: :file %>
      <%= f.input :tag_list, label: "Add Category", hint: "What is the category of item?" %>
      <%= f.input :collection_instruction %>
      <div class="d-flex justify-content-center">
        <%= f.submit "Add new item", class: "btn custom-btn"%>
      </div>
    <% end %>
  </div>
</div>
